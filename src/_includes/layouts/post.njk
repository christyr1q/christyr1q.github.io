---
layout: default-blog
---

<article class="max-w-5xl mx-auto">
    <header class="mb-14">
        <h1 class="text-3xl text-center font-bold leading-normal text-gray-900 mt-0 mb-3">{{ title }}</h1>
        <div class="text-center">Published on {{ page.date | readableDate }}</div>
        {% if tags %}
        <div class="mt-3 text-center">
            {% for tag in tags %}
            <a href="{{ '/tags/' | url }}{{ tag }}" class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-medium text-gray-700 m-0.5">#{{ tag }}</a>
            {% endfor %}
        </div>
        {% endif %}
        {% if thumb %}
        <div class="mt-10 -mx-7 md:mx-0">
            {% ImagePlace src=thumb, justify='center' %}
            {% endImagePlace %}
        </div>
        {% endif %}
    </header>
    <div id="content" class="postContent prose text-gray-800 max-w-none">
        {{ content | safe }}
    </div>
</article>