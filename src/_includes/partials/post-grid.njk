<div class="grid grid-cols-1 mt-0">
    {% for post in paged.posts %}
    <a href="{{ post.url | url }}" rel="noopener">
    <div class="mt-10 sm:mt-12 md:mt-14 lg:mt-16 xl:mt-18 grid grid-cols-1 sm:grid-cols-12 sm:justify-items-stretch
                gap-x-4 sm:gap-x-8 lg:gap-x-10 xl:gap-x-12 gap-y-12">
        {% if post.data.description %}
        {% set desc = post.data.description %}
        {% else %}
        {% set desc = post.templateContent | striptags | truncate(180, true) %}
        {% endif %}
        {% set thumb='index_banner.png' %}
        {% if post.data.thumb %}
            {% set thumb=post.data.thumb %}
        {% endif %}        
        {% if loop.index0%2 > 0 %}
            <div class="flex sm:col-start-1 sm:col-span-4 md:col-start-2 lg:col-start-3 lg:col-span-3 sm:w-full sm:h-full object-cover">
            {% ImageProcess 'src/posts/img/' + thumb, 
                        false,
                        post.data.title,
                        960, 
                        "rounded-xl object-cover", 
                        'flex object-cover',
                        "box-shadow: -3vw 3vw 3vw rgba(35, 31, 32, .5);" %}
            </div>
            <div class="flex flex-col sm:col-span-8 md:col-span-6 lg:col-span-5">
                <h3 class="h3-main text-left">{{post.data.title}}</h2>
                <p class="p-date">{{post.date | postDate }}</p>
                <p class="p-main text-left">{{desc}}</p>
            </div>
        {% else %}
            <div class="flex flex-col order-last sm:order-first sm:col-start-1 sm:col-span-8 md:col-start-2 md:col-span-6 lg:col-start-3 lg:col-span-5">
                <h3 class="h3-main text-left">{{post.data.title}}</h2>
                <p class="p-date">{{post.date | postDate }}</p>
                <p class="p-main text-left">{{desc}}</p>
            </div>
            <div class="flex order-first sm:order-last sm:col-span-4 lg:col-span-3 sm:w-full sm:h-full object-cover">
            {% ImageProcess 'src/posts/img/' + thumb, 
                        false,
                        post.data.title,
                        960, 
                        "rounded-xl object-cover", 
                        'flex object-cover',
                        "box-shadow: -3vw 3vw 3vw rgba(35, 31, 32, .5);" %}
            </div>
        {% endif %}
    </div>
    </a>
    {% endfor %}

</div>
